      "module": "es6",
      "moduleResolution": "node",
      "target": "es6",
      "sourceMap": true,
      "noImplicitAny": true,
      "removeComments": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*.ts", "src/entry.js"
